<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnAgregarNota"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2919191"
    android:orientation="vertical"
    tools:context=".agregar_notas">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:text="Agregar Nota"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/fondolayout"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <EditText
            android:id="@+id/etxArchivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:background="#E995E1F4"
            android:ems="10"
            android:paddingStart="12dp"
            android:hint="Agrega el nombre del archivo"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etxNota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#E995E1F4"
            android:ems="20"
            android:gravity="top"
            android:paddingStart="12dp"
            android:hint="Nota"
            android:lines="5"
            android:minHeight="48dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAgrego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Agregar Nota" />

</LinearLayout>